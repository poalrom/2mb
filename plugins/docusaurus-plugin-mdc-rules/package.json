{
  "name": "docusaurus-plugin-mdc-rules",
  "version": "1.0.0",
  "description": "Custom Docusaurus plugin for processing .mdc files from .cursor/rules/ into documentation pages",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "remark": "^15.0.1"
  },
  "peerDependencies": {
    "@docusaurus/core": "^3.8.0"
  },
  "devDependencies": {
    "@docusaurus/types": "^3.8.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.6.2"
  },
  "keywords": [
    "docusaurus",
    "plugin",
    "cursor",
    "cursor-ai",
    "cursor-rules",
    "mdc",
    "documentation"
  ],
  "author": "poalrom",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}